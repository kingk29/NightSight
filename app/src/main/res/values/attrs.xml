<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Two TextView Attributes -->
    <attr name="subtextSize" format="dimension" />
    <attr name="subtextColor" format="color" />
    <attr name="subtext" format="string" />
    <attr name="subtextFontStyle">
        <flag name="regular" value="0x01" />
        <flag name="medium" value="0x02" />
        <flag name="light" value="0x03" />
    </attr>
    <declare-styleable name="HorizontalTwoTextView">
        <attr name="subtextSize" />
        <attr name="subtextColor" />
        <attr name="subtext" />
        <attr name="subtextFontStyle" />
    </declare-styleable>

    <declare-styleable name="VerticalTwoTextView">
        <attr name="subtextSize" />
        <attr name="subtextColor" />
        <attr name="subtextTopMargin" format="dimension" />
        <attr name="subtext" />
        <attr name="subtextFontStyle" />
    </declare-styleable>
    <declare-styleable name="Shape">
        <attr name="shapeColor" format="color" />
        <attr name="shapeType" format="enum">
            <enum name="Rectangle" value="0" />
            <enum name="Circle" value="1" />
            <enum name="Line" value="2" />
            <enum name="Rounded_Rectangle" value="3" />
        </attr>
    </declare-styleable>


</resources>
